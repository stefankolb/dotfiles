# BASH prompt
# 
# iTerm2 -> Profiles -> Text -> Hack 12pt

# Define colors
COLOR_RESET="\e[0m";
COLOR_BLACK=="\e[1;30m";
COLOR_BLUE="\e[1;34m";
COLOR_CYAN="\e[1;36m";
COLOR_GREEN="\e[1;32m";
COLOR_ORANGE="\e[1;33m";
COLOR_PURPLE="\e[1;35m";
COLOR_RED="\e[1;31m";
COLOR_VIOLET="\e[1;35m";
COLOR_WHITE="\e[1;37m";
COLOR_YELLOW="\e[1;33m";

# Prompt
PS1="\n[\w]"                                          # Insert empty line after last command
PS1+="${COLOR_GREEN}\$(git_get_branch)${COLOR_RESET}" # Show Git branch, if available
PS1+="${COLOR_YELLOW}\$(git_get_hash)${COLOR_RESET}"  # Show Git hash, if available
PS1+="${COLOR_RED}\$(git_get_tag)${COLOR_RESET}"      # Show Git tag, if available
PS1+=" (\u ${COLOR_BLUE}<\j>${COLOR_RESET} \t)\n"     # Who, no. of proccess, current time
