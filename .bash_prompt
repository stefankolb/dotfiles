# https://github.com/nicksp/dotfiles/blob/master/shell/bash_prompt
# Terminal -> Profiles -> Pro -> Text -> Monaco 13pt with 1,1 vertical spacing

if [[ $COLORTERM = gnome-* && $TERM = xterm ]] && infocmp gnome-256color >/dev/null 2>&1; then
  export TERM='gnome-256color';
elif infocmp xterm-256color >/dev/null 2>&1; then
  export TERM='xterm-256color';
fi;

# Define colors
COLOR_RESET="\e[0m";
COLOR_BLACK=="\e[1;30m";
COLOR_BLUE="\e[1;34m";
COLOR_CYAN="\e[1;36m";
COLOR_GREEN="\e[1;32m";
COLOR_ORANGE="\e[1;33m";
COLOR_PURPLE="\e[1;35m";
COLOR_RED="\e[1;31m";
COLOR_VIOLET="\e[1;35m";
COLOR_WHITE="\e[1;37m";
COLOR_YELLOW="\e[1;33m";

# -----------------------------------------------------------------------------
# PROMPT STRING
# -----------------------------------------------------------------------------

PS1="\n[\w]"                                          # Insert empty line after last command
PS1+="${COLOR_GREEN}\$(get_git_branch)${COLOR_RESET}" # Show Git branch, if available
PS1+="${COLOR_YELLOW}\$(get_git_hash)${COLOR_RESET}"  # Show Git hash, if available
PS1+="${COLOR_RED}\$(get_git_tag)${COLOR_RESET}"      # Show Git tag, if available
PS1+=" (\u ${COLOR_BLUE}<\j>${COLOR_RESET} \t)\n"     # Who, no. of proccess, current time
PS1+="â†’ "                                             # Actual prompt
