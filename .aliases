alias wur='osascript ~/.dotfiles/.termtile/tile.scpt up right'
alias wdl='osascript ~/.dotfiles/.termtile/tile.scpt down left'
alias wdr='osascript ~/.dotfiles/.termtile/tile.scpt down right'
alias wl='osascript ~/.dotfiles/.termtile/tile.scpt left'
alias wr='osascript ~/.dotfiles/.termtile/tile.scpt right'
alias wu='osascript ~/.dotfiles/.termtile/tile.scpt up'
alias wd='osascript ~/.dotfiles/.termtile/tile.scpt down'
